{
  "name": "tyroneross-blog-scraper",
  "version": "0.2.0",
  "description": "Powerful web scraping SDK for extracting blog articles and content. No LLM required.",
  "keywords": [
    "scraper",
    "web-scraping",
    "content-extraction",
    "blog",
    "articles",
    "rss",
    "sitemap",
    "readability",
    "mozilla-readability"
  ],
  "author": "Tyrone Ross",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyroneross/blog-content-scraper.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/tyroneross/blog-content-scraper#readme",
  "bugs": {
    "url": "https://github.com/tyroneross/blog-content-scraper/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "cheerio": "^1.1.2",
    "jsdom": "^24.0.0",
    "rss-parser": "^3.13.0",
    "turndown": "^7.2.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "tsup": "^8.3.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
